# =============================================================================
# SCHEDULER — Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
#   cp .env.example .env
#
# DEVELOPMENT (single machine, both VMs local via docker-compose.yml):
#   DATABASE_URL=postgresql://scheduler_user:scheduler_pass@database:5432/scheduler
#
# PRODUCTION VM1 (web server, points to VM2 database server):
#   DATABASE_URL=postgresql://scheduler_user:<password>@<DB_VM_PRIVATE_IP>:5432/scheduler
# =============================================================================


# =============================================================================
# Application URL
# =============================================================================
# Used at build time — must match the public URL of the app.
# Dev:  http://localhost:3000
# Prod: https://scheduler.yourdomain.com
NEXT_PUBLIC_APP_URL=http://localhost:3000


# =============================================================================
# Database
# =============================================================================
# DEVELOPMENT — points to the local "database" Docker container hostname
DATABASE_URL=postgresql://scheduler_user:scheduler_pass@database:5432/scheduler

# PRODUCTION VM1 — uncomment and replace with VM2 private IP and password
# DATABASE_URL=postgresql://scheduler_user:<password>@<DB_VM_PRIVATE_IP>:5432/scheduler

# Database credentials (used by docker-compose.db.yml to create the database)
DB_PASSWORD=scheduler_pass
POSTGRES_DB=scheduler
POSTGRES_USER=scheduler_user


# =============================================================================
# Auth.js (next-auth)
# =============================================================================
# Generate a strong random secret:
#   openssl rand -base64 32
AUTH_SECRET=change-this-to-a-random-secret-in-production

# Must match the public URL of the app (same as NEXT_PUBLIC_APP_URL)
AUTH_URL=http://localhost:3000


# =============================================================================
# SendGrid (email delivery)
# =============================================================================
SENDGRID_API_KEY=SG.replace_with_your_sendgrid_api_key
FROM_EMAIL=noreply@yourdomain.com


# =============================================================================
# Company / Branding
# =============================================================================
COMPANY_NAME=Barbados Licensing Authority
