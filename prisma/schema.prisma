generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model StaffUser {
  id                   Int                   @id @default(autoincrement())
  email                String                @unique
  passwordHash         String
  name                 String
  role                 String                @default("staff")
  mustChangePassword   Boolean               @default(true)
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  approvedRequests     AppointmentRequest[]  @relation("ApprovedBy")

  @@map("staff_users")
}

model AppointmentRequest {
  id                  Int                @id @default(autoincrement())
  referenceNumber     String             @unique
  status              String             @default("confirmed")
  customerName        String
  customerEmail       String
  customerPhone       String?
  servicesRequested   String[]
  preferredDate       DateTime?
  preferredTime       String?
  additionalNotes     String?
  approvedBy          Int?
  approvedByUser      StaffUser?         @relation("ApprovedBy", fields: [approvedBy], references: [id])
  reviewedAt          DateTime?
  staffNotes          String?
  serviceBookings     ServiceBooking[]
  cancellationToken   String?            @unique
  cancellation        CancellationLog?
  createdAt           DateTime           @default(now())
  updatedAt           DateTime           @updatedAt

  @@map("appointment_requests")
}

model ServiceBooking {
  id                   Int                @id @default(autoincrement())
  appointmentRequest   AppointmentRequest @relation(fields: [appointmentRequestId], references: [id], onDelete: Cascade)
  appointmentRequestId Int
  serviceName          String
  scheduledDate        DateTime
  scheduledTime        String
  location             String?
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt

  @@map("service_bookings")
}

model CancellationLog {
  id                   Int                @id @default(autoincrement())
  appointmentRequest   AppointmentRequest @relation(fields: [appointmentRequestId], references: [id])
  appointmentRequestId Int                @unique
  
  // Snapshot of appointment at time of cancellation
  referenceNumber      String
  customerName         String
  customerEmail        String
  servicesRequested    String[]
  scheduledDates       String[]
  
  // Cancellation details
  reason               String?
  cancelledAt          DateTime           @default(now())
  cancelledVia         String
  ipAddress            String?
  
  @@map("cancellation_logs")
}
